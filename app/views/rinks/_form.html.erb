<%= @rink.surfaces.inspect %>
<%= simple_form_for(@rink) do |f| %>
  <%= f.input :name %>
  <%= f.input :address1 %>
  <%= f.input :address2 %>
  <%= f.input :addresscity %>
  <%= f.input :addressstate %>
  <%= f.input :addresszip %>
  <%= f.input :phone1 %>
  <%= f.input :phone2 %>
  <%= f.input :website %>
  <%= f.input :surfacecount %>
  <%= f.input :indoor %>
  <%= f.input :openhockey %>
  <%= f.input :sticktime %>
  <%= f.input :proshop %>
  <%= f.input :notes %>
  <fieldset>
    <%= :rink_surfaces.inspect %>
    <%= f.simple_fields_for :rink_surfaces do |builder| %>
      <%= render 'rink_surface_fields', f: builder %>      
    <% end %>
    <%= link_to_add_fields "Add Surface", f, :rink_surfaces %>
  </fieldset> 
  <%= f.button :submit %>
<% end %>
