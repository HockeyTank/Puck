<%= @rink.surfaces.inspect %>
<%= simple_form_for(@rink) do |f| %>
  <%= f.input :name %>
  <%= f.input :address1 %>
  <%= f.input :address2 %>
  <%= f.input :addresscity %>
  <%= f.input :addressstate %>
  <%= f.input :addresszip %>
  <%= f.input :phone1 %>
  <%= f.input :phone2 %>
  <%= f.input :website %>
  <%= f.input :surfacecount %>
  <%= f.input :indoor %>
  <%= f.input :openhockey %>
  <%= f.input :sticktime %>
  <%= f.input :proshop %>
  <%= f.input :notes %>
  <fieldset>
    <%= f.simple_fields_for :surfaces do |face| %>
    <%= render 'surface_fields', f: face %>
  <% end %>
  </fieldset> 
  <%= f.button :submit %>
<% end %>
