<%- model_class = Rink -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @rink.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address1) %>:</strong></dt>
  <dd><%= @rink.address1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address2) %>:</strong></dt>
  <dd><%= @rink.address2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:addresscity) %>:</strong></dt>
  <dd><%= @rink.addresscity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:addressstate) %>:</strong></dt>
  <dd><%= @rink.addressstate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:addresszip) %>:</strong></dt>
  <dd><%= @rink.addresszip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone1) %>:</strong></dt>
  <dd><%= @rink.phone1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone2) %>:</strong></dt>
  <dd><%= @rink.phone2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:website) %>:</strong></dt>
  <dd><%= @rink.website %></dd>
  <dt><strong><%= model_class.human_attribute_name(:surfacecount) %>:</strong></dt>
  <dd><%= @rink.surfacecount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:indoor) %>:</strong></dt>
  <dd><%= @rink.indoor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:openhockey) %>:</strong></dt>
  <dd><%= @rink.openhockey %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sticktime) %>:</strong></dt>
  <dd><%= @rink.sticktime %></dd>
  <dt><strong><%= model_class.human_attribute_name(:proshop) %>:</strong></dt>
  <dd><%= @rink.proshop %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              rinks_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_rink_path(@rink), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              rink_path(@rink),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
