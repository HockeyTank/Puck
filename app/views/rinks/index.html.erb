<%- model_class = Rink -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address1) %></th>
      <th><%= model_class.human_attribute_name(:address2) %></th>
      <th><%= model_class.human_attribute_name(:addresscity) %></th>
      <th><%= model_class.human_attribute_name(:addressstate) %></th>
      <th><%= model_class.human_attribute_name(:addresszip) %></th>
      <th><%= model_class.human_attribute_name(:phone1) %></th>
      <th><%= model_class.human_attribute_name(:phone2) %></th>
      <th><%= model_class.human_attribute_name(:website) %></th>
      <th><%= model_class.human_attribute_name(:surfacecount) %></th>
      <th><%= model_class.human_attribute_name(:indoor) %></th>
      <th><%= model_class.human_attribute_name(:openhockey) %></th>
      <th><%= model_class.human_attribute_name(:sticktime) %></th>
      <th><%= model_class.human_attribute_name(:proshop) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @rinks.each do |rink| %>
      <tr>
        <td><%= link_to rink.id, rink_path(rink) %></td>
        <td><%= link_to rink.name, rink_path(rink) %></td>
        <td><%= rink.address1 %></td>
        <td><%= rink.address2 %></td>
        <td><%= rink.addresscity %></td>
        <td><%= rink.addressstate %></td>
        <td><%= rink.addresszip %></td>
        <td><%= rink.phone1 %></td>
        <td><%= rink.phone2 %></td>
        <td><%= rink.website %></td>
        <td><%= rink.surfacecount %></td>
        <td><%= rink.indoor %></td>
        <td><%= rink.openhockey %></td>
        <td><%= rink.sticktime %></td>
        <td><%= rink.proshop %></td>
        <td><%=l rink.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_rink_path(rink), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      rink_path(rink),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_rink_path,
            :class => 'btn btn-primary' %>
